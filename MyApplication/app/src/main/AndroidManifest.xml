<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nortti.ru.dogshelter">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="nortti.ru.dogshelter.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="nortti.ru.dogshelter.activities.AboutActivity"/>
        <activity android:name="nortti.ru.dogshelter.activities.HowGetActivity"/>
        <activity android:name="nortti.ru.dogshelter.activities.HowHelpActivity"/>
<activity android:name="nortti.ru.dogshelter.DogInfoActivity"/>
    </application>

</manifest>
